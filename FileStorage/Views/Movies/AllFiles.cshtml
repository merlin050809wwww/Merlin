@model IEnumerable<FileStorage.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Files</h1>

<div class="container">
    <a class="navbar-brand" asp-action="Create">Create New</a>
    <a class="navbar-brand" asp-action="Index" >   MyFiles</a>
    <a class="navbar-brand" asp-action="AllFiles">   AllFiles</a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    IDUser
                    @*@Html.DisplayNameFor(model => model.IDUser)*@
                </th>
                <th>
                    Name
                    @*@Html.DisplayNameFor(model => model.Title)*@
                </th>
                <th>
                    ReleaseDate
                    @*@Html.DisplayNameFor(model => model.ReleaseDate)*@
                </th>
                <th>
                    File Name
                    @*@Html.DisplayNameFor(model => model.Name)*@
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
